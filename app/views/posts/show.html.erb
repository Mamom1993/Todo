<% @title = @post.title %>


<article class="post">
	<h2>
	  <%= @post.title %>
	</h2>
 
<p>
  <%= @post.body %><br>
  <small><%= @post.user.try(:email) %>
  	<time><%= @post.created_at.strftime("%H:%M, %d.%m.%Y") %></time> | 
	<%= link_to 'Изменить', edit_post_path(@post) %> |
	<%= link_to 'Удалить', post_path(@post),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %>
  </small>

</p>

</article>